{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<div class="card">
    <div class="card-body">
        <h4>Editar postagem</h4>
        <form action="/admin/postagens/editar" method="POST">
        <input type="hidden" value="{{postagem._id}}" name="id">
            <label for="titulo" >Título:</label>
            <input type="text" name="titulo" id="titulo" class="form-control" value="{{postagem.titulo}}">
            <label for="slug">Slug:</label>
            <input type="text" name="slug" id="slug" class="form-control" value="{{postagem.slug}}">
            <label for="descricao">Descrição</label>
            <input type="text" name="descricao" id="descricao" class="form-control" value="{{postagem.descricao}}">
            <label for="counteudo">Conteúdo:</label>
            <textarea name="conteudo" class="form-control">{{postagem.conteudo}}</textarea>
            <br>
            <label for="categoria">Categoria:</label>
            <select name="categoria" class="custom-select">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registada</option>
                {{/each}}
            </select>
            <button class="btn btn-success mt-4" type="submit">Editar postagem</button>
        </form>
    </div>
</div>